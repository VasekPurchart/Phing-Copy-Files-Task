{
	"name": "vasek-purchart/phing-copy-files-task",
	"description": "Copy files with better control over copying than the default Phing CopyTask",
	"keywords": ["phing", "task", "copy", "file"],
	"license": "MIT",
	"authors": [
		{
			"name": "Va≈°ek Purchart",
			"email": "me@vasekpurchart.cz",
			"homepage": "http://vasekpurchart.cz"
		}
	],
	"require": {
		"php": "~7.2",
		"phing/phing": "~2.16"
	},
	"require-dev": {
		"consistence/coding-standard": "3.10.1",
		"php-parallel-lint/php-console-highlighter": "1.0",
		"php-parallel-lint/php-parallel-lint": "1.3.2",
		"phpunit/phpunit": "8.5.25",
		"vasek-purchart/phing-tester": "2.1"
	},
	"autoload": {
		"psr-4": {
			"VasekPurchart\\Phing\\CopyFiles\\": [
				"src"
			]
		},
		"classmap": [
			"src"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"VasekPurchart\\Phing\\CopyFiles\\": [
				"tests"
			]
		},
		"classmap": [
			"tests"
		]
	},
	"config": {
		"bin-dir": "bin",
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": false
		}
	}
}
